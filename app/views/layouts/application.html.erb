<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | CatFuneral</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <li><%= link_to 'Home', static_pages_home_path %></li>
        <% if logged_in? %>
          <li><%= link_to 'Customers', customers_path %></li>
          <li><%= link_to 'Reservation', new_funeral_path %></li>
          <li><%= link_to 'Weather', weather_path %></li>
          <li><%= link_to 'Calendar', calendar_path %></li>
          <li><%= link_to 'Logout', '/logout', method: :delete %></li>
        <% else %>
          <li><%= link_to 'Login', login_path %></li>
          <li><%= link_to 'Sign up', new_customer_path %></li>
        <% end %>
      </ul>
    <%= yield %>
  </body>
</html>
